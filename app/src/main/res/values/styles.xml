<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/md_black_1000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textColorHint">@color/md_black_1000</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:navigationBarColor">@color/md_black_1000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DialogWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_exit</item>
    </style>

    <style name="DialogFragmentAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:windowBackground">@drawable/bg_splash</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Text" />

    <style name="Text.Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Wrap.AllCap">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Wrap.White">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="Text.Wrap.White.ProMedium">
        <item name="android:fontFamily">@font/sfprodisplay_medium</item>
    </style>

    <style name="Text.Wrap.White.ProRegular">
        <item name="android:fontFamily">@font/sfprotext_regular</item>
    </style>

    <style name="Text.Wrap.White.ProBold">
        <item name="android:fontFamily">@font/sfprotext_semibold</item>
    </style>

    <style name="Text.Wrap.Black">
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/md_black_1000</item>
    </style>

</resources>
